<%- include header %>
<form method="post" class="form-horizontal">
    <div class="form-group">
    	<label for="title" class="col-sm-3 control-label">标题</label>
    	<div class="col-sm-6">
    		<input type="text" name="title" class="form-control" placeholder="文章标题"/>
    	</div>
    </div>
    <div class="form-group">
    	<label for="title" class="col-sm-3 control-label">标签</label>
    	<div class="col-sm-9 form-inline">
    		<input type="text" name="tag1" class="form-control" placeholder="标签"/>
    		<input type="text" name="tag2" class="form-control" placeholder="标签"/>
    		<input type="text" name="tag3" class="form-control" placeholder="标签"/>
    	</div>
    </div>
    <div class="form-group">
    	<label for="title" class="col-sm-3 control-label">正文</label>
    	<div class="col-sm-6">
    		<textarea name="post" rows="20" cols="100" class="form-control" placeholder="正文内容"></textarea>
    	</div>
    </div>
    <div class="form-group">
    	<div class="col-sm-6 col-sm-offset-3">
    		<input class="btn btn-lg btn-primary" type="submit" value="发表" />
    	</div>
    </div>
</form>
<%- include footer %>